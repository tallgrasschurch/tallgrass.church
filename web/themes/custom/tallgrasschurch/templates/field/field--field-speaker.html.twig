{%
  set classes = [
    'field',
    'field--' ~ field_name|clean_class,
    'article-header__speaker',
  ]
%}

{%
  set label_classes = [
    'field__label',
  ]
%}

<dl{{ attributes.addclass(classes) }}>
  <dt{{ title_attributes.addClass(label_classes) }}>Speaker{% if items|length > 1 %}s{% endif %}:</dt>
  {% for item in items %}
    <dd{{ item.attributes }}>{{ item.content }}</dd>
  {% endfor %}
</dl>
