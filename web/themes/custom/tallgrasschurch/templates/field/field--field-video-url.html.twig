{#
/**
 * Custom variables:
 * - items
 *   - video_embed_supported
 *   - video_service
 *   - video_id
 */
#}

{% extends "field.html.twig" %}

{%
  set label_classes = [
    'field__label',
  ]
%}

{% block label %}
  <h2{{ title_attributes.addClass(label_classes) }}>Video</h2>
{% endblock %}
{% block content %}
  {% for item in items %}
    {% if item.video_embed_supported %}
      <div class="field__content embed-responsive embed-responsive-16by9">
        {% if item.video_service == 'youtube' %}
          <iframe src="https://www.youtube.com/embed/{{ item.video_id }}?rel=0" width="560" height="315" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
        {% elseif item.video_service == 'vimeo' %}
          <div style="padding:56.25% 0 0 0;position:relative;">
            <iframe src="https://player.vimeo.com/video/{{ item.video_id }}?color=98e2fd" style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>
          </div>
        {% endif %}
      </div><!-- .field__content -->
    {% else %}
      <div{{ item.attributes.addClass('field__content') }}>
        {{ item.content }}
      </div><!-- .field__content -->
    {% endif %}
  {% endfor %}
{% endblock %}
