{% if view_mode in ['card', 'card_horizontal'] %}

  {%
    set classes = [
      'card',
    ]
  %}

  {% if view_mode == 'card_horizontal' %}
    {% set classes = classes|merge(['card--h']) %}
  {% endif %}

  <article{{ attributes.addClass(classes) }}>
    <div class="card__img">
      {{ content.field_image }}
    </div><!-- .card__img -->

    <div class="card__content">
      <header class="card__header">
        {{ title_prefix }}
        {% if name and not page %}
          <h2 class="card__title">
            <a href="{{ url }}">{{ name.0 }}</a>
          </h2>
        {% endif %}
        {{ title_suffix }}
      </header><!-- .card__header -->

      <div class="card__body">
        {{ content|without('field_image') }}
      </div><!-- .card__body -->

      <div class="card__footer">
        <a href="{{ url }}">View series &rarr;</a>
      </div><!-- .card__footer -->
    </div><!-- .card__content -->
  </article><!-- .card -->

{% else %}

  {#
    TODO: This is a duplicate of the default taxonomy-term template code
  #}
  <div{{ attributes }}>
    {{ title_prefix }}
    {% if name and not page %}
      <h2><a href="{{ url }}">{{ name }}</a></h2>
    {% endif %}
    {{ title_suffix }}

    {{ content }}
  </div>

{% endif %}

