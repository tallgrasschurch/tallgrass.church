  {% set n = 2 %}
  {% for i in range(1, n) %}
    <div class="card">
      <div class="card__img">
        <img src="https://placeimg.com/1280/720/animals?n=2-col-deck-{{ i }}" alt="">
      </div>
      <div class="card__content">
        <div class="card__header">
          header
        </div>
        <div class="card__body">
          Tellus tortor himenaeos risus nostra augue nulla.
        </div>
        <div class="card__footer">
          footer
