{
  "name": "tallgrass.church-v2",
  "description": "Tallgrass Community Church website v2.",
  "main": "index.js",
  "config": {
    "path_src": "src",
    "path_src_css": "src/css",
    "path_build": "_site",
    "path_build_css": "_site/css",
    "sass_settings": "--output-style expanded --source-map true --source-map-contents true --precision 6"
  },
  "scripts": {
    "start": "npm-run-all build --parallel serve watch livereload",
    "build": "npm-run-all build:*",
    "build:clean": "del-cli --force $npm_package_config_path_build",
    "build:html": "npx eleventy",
    "build:css": "node-sass $npm_package_config_sass_settings $npm_package_config_path_src_css -o $npm_package_config_path_build_css",
    "build:postcss": "npx postcss $npm_package_config_path_build_css/*.css --use autoprefixer -d $npm_package_config_path_build_css",
    "livereload": "livereload $npm_package_config_path_build_css/**/*.css",
    "serve": "npx eleventy --serve",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "node-sass $npm_package_config_sass_settings $npm_package_config_path_src_css -o $npm_package_config_path_build_css --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tallgrasschurch/tallgrass.church.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/natedillon/eleventy-boilerplate/issues"
  },
  "homepage": "https://github.com/natedillon/eleventy-boilerplate#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "autoprefixer": "^9.7.5",
    "del-cli": "^3.0.0",
    "livereload": "^0.9.1",
    "node-sass": "^4.13.1",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0"
  }
}
